<!-- Search form -->
<div id="create-profile-container" class="container">
  <h1>Create Expert Finder Profile</h1>

  <!-- form for account creation -->
  <form action="">

    <!-- first name and last name -->
    <div class="row">
      <!-- field for first name -->
      <div class="col-6">
        <label for="first-name">First Name</label>
        <div>
          <input id="first-name" name="first-name" type="text" value=""/>
        </div>
      </div>
      <!-- field for last name -->
      <div class="col-6">
        <label for="last-name">Last Name</label>
        <div>
          <input id="last-name" name="last-name" type="text" value=""/>
        </div>
      </div>
    </div>

    <!-- email and twitter -->
    <div class="row">
      <!-- Email -->
      <div class="col-6">
        <label for="email">Email</label>
        <div>
          <input id="email" name="email" type="email" value=""/>
        </div>
      </div>
      <!-- Twitter -->
      <div class="col-6">
        <label for="twitter">Twitter</label>
        <div>
          <input id="twitter" name="twitter" type="text" value=""/>
        </div>
      </div>
    </div>

    <!-- github and linkedin -->
    <div class="row">
      <!-- GitHub -->
      <div class="col-6">
        <label for="github">GitHub</label>
        <div>
          <input id="github" name="github" type="text" value=""/>
        </div>
      </div>
      <!-- LinkedIn -->
      <div class="col-6">
        <label for="linkedin">LinkedIn</label>
        <div>
          <input id="linkedin" name="linkedin" type="text" value=""/>
        </div>
      </div>
    </div>

    <!-- industry -->
    <div class="row">
      <div class="col-6">
        <label for="industry">Industry</label>
        <div>
          <input id="industry" name="industry" type="text" value=""/>
        </div>
      </div>
    </div>

    <!-- skills and courses -->
    <div class="row">
      <!-- skills -->
      <div class="col-6">
        <label for="skills">Skills</label>
        <div>
          <input id="skills" name="skills" type="text" value=""/>
          <button id="skills-button">Add</button>
        </div>
      </div>
      <!-- courses -->
      <div class="col-6">
        <label for="courses">Courses</label>
        <div>
          <input id="courses" name="courses" type="text" value=""/>
          <button id="courses-button">Add</button>
        </div>
      </div>
    </div>

    <!-- register and cancel buttons -->
    <div class="row">
    </div>

  </form>
</div>
